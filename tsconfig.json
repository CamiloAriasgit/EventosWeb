{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "react-jsx",           // <-- agrega esta lÃ­nea
    "jsxImportSource": "react",   // <-- opcional, pero recomendado
    "module": "esnext",           // <-- opcional, recomendado para Astro/React
    "target": "esnext",           // <-- opcional, recomendado para Astro/React
    "moduleResolution": "node",   // <-- opcional, recomendado para Astro/React
    "allowJs": true,              // <-- opcional
    "esModuleInterop": true,      // <-- opcional
    "forceConsistentCasingInFileNames": true, // <-- opcional
    "strict": true,               // <-- opcional
    "skipLibCheck": true          // <-- opcional
  }
}